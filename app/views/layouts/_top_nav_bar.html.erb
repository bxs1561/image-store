<div class="ui fixed inverted large secondary menu" style="background-color: #4a69bb;">
  <div class="ui container">
    <div class="header item" id="top-nav">
      <a class="<%= current_page?(root_path) ? "active" : '' %> item" href="<%= root_path %>">
<!--        <h>Home</h>-->
        <div class="font-size">
          Home
        </div>
      </a>
    </div>
    <div class="right menu">
      <% if current_user %>
        Signed in as <strong><%= current_user.email %></strong>!
        <a class="<%= current_page?(destroy_user_session_path) ? "active" : '' %> item" <%= link_to "Log Out", destroy_user_session_path, method: :delete %>
        </a>
      <% else %>
        <a class="<%= current_page?(new_user_session_path) ? "active" : '' %> item" href="<%= new_user_session_path %>">
          <i class="user circle icon"></i>
          <div class="login">
          Login
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>
