<!--<div class="ui very centered padded text container segment">-->
<div class="ui very padded text container segment">

  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui form'}) do |f| %>
    <%= render 'devise/shared/login_error_messages', resource: resource %>
    <div class="field">
      <%= f.label :email %>
      <div class="ui left icon input">
        <i class="user alternate icon"></i>
        <%= f.email_field :email, autofocus: true, autocomplete: "off", required: true %>
      </div>
    </div>

    <div class="field">
      <%= f.label :password %>
      <div class="ui left icon input">
        <i class="key icon"></i>
        <%= f.password_field :password, autocomplete: "off", required: true %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="inline field">
        <div class="ui checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'ui primary button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  <%#= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class: 'ui google plus button' %>
  <a href="<%= user_google_oauth2_omniauth_authorize_path %>">
    <button class="fluid ui google red button",>
      <i class="google icon"></i>
      Conect with Google
    </button>
  </a>

</div>
