<% flash.each do |name, message| %>
  <% if name == 'alert' %>
    <div id="error_explanation" class="ui red message">

      <h2>
        <%= I18n.t("errors.messages.not_saved",
                   count: resource.errors.count,
                   resource: resource.class.model_name.human.downcase)
        %>
      </h2>
      <ul class="list">
        <li><%= message %></li>
      </ul>
    </div>
  <% end %>
<% end %>